clean:
  ifeq ($(UNAME),MSDOS)
	-del $(subst /,\,$(frontend_obj))
	-del $(subst /,\,$(lib_obj))
	-del $(subst /,\,$(gtk_obj))
	-del $(subst /,\,$(DEP))
	-del frontend\$(PGM)
	-del frontend\main.o
	-del libmp3lame\libmp3lame.a
  else
	-$(RM) $(gtk_obj) $(frontend_obj) $(lib_obj) $(DEP) frontend/$(PGM) \
          frontend/main.o frontend/lame libmp3lame/libmp3lame.a \
          frontend/mp3x.o frontend/mp3x
  endif


tags: TAGS

