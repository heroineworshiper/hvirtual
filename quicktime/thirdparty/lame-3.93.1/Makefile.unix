	-march=athlon-xp -mfancy-math-387 -malign-double \
	-fomit-frame-pointer \
	-ffast-math \
	-finline-functions \
	-fstrength-reduce \
	-funroll-loops \
	-funroll-all-loops \
	-fexpensive-optimizations \
#	-fschedule-insns2  \
	
   HAVE_NEWER_GLIBC = YES
   HAVE_NASM = YES
